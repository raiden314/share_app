<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
    <title>detail</title>




    
<body>
  <!--ヘッダー-->
  <header>
    <!--グローバルナビゲーション-->
    <div class="px-3 py-2 bg-dark text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <div class="justify-content-center d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
              <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
              <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
            </svg>
            <p class="p">記事の詳細</p>
          </div>
        
              <!--記事一覧nav-->
              <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small hover">
              <ul class="nav col-lg-auto my-2 justify-content-center my-md-0 text-small">
                <li>
                  <a href="<%= "/posts/index" %>" class="nav-link text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-inboxes-fill" viewBox="0 0 16 16">
                      <path d="M4.98 1a.5.5 0 0 0-.39.188L1.54 5H6a.5.5 0 0 1 .5.5 1.5 1.5 0 0 0 3 0A.5.5 0 0 1 10 5h4.46l-3.05-3.812A.5.5 0 0 0 11.02 1H4.98zM3.81.563A1.5 1.5 0 0 1 4.98 0h6.04a1.5 1.5 0 0 1 1.17.563l3.7 4.625a.5.5 0 0 1 .106.374l-.39 3.124A1.5 1.5 0 0 1 14.117 10H1.883A1.5 1.5 0 0 1 .394 8.686l-.39-3.124a.5.5 0 0 1 .106-.374L3.81.563zM.125 11.17A.5.5 0 0 1 .5 11H6a.5.5 0 0 1 .5.5 1.5 1.5 0 0 0 3 0 .5.5 0 0 1 .5-.5h5.5a.5.5 0 0 1 .496.562l-.39 3.124A1.5 1.5 0 0 1 14.117 16H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .121-.393z"/>
                    </svg>
                    
                    <%= link_to("記事一覧", "/posts/index") %>
                  </a>
                </li>
      
                <!--ユーザのプロフィールnav-->
                <li>
                  <a href="<%= "/users/#{@current_user.id}" %>" class="nav-link text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                      <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                      <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                    </svg>
                    
                    <%= link_to("プロフィール", "/users/#{@current_user.id}") %>
                  </a>
                </li>
      
                <!--グループ一覧nav-->
                <% if @current_user.gid.present? %>
                  <li>
                    <a href="<%= "/users/index" %>" class="nav-link text-white">
                      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-ui-checks" viewBox="0 0 16 16">
                        <path d="M7 2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zM2 1a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2zm0 8a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-2a2 2 0 0 0-2-2H2zm.854-3.646a.5.5 0 0 1-.708 0l-1-1a.5.5 0 1 1 .708-.708l.646.647 1.646-1.647a.5.5 0 1 1 .708.708l-2 2zm0 8a.5.5 0 0 1-.708 0l-1-1a.5.5 0 0 1 .708-.708l.646.647 1.646-1.647a.5.5 0 0 1 .708.708l-2 2zM7 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zm0-5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 8a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                      </svg>
                      <%= link_to("グループ一覧", "/users/index") %>   
                    </a>
                  </li>
                <% end %>
      
                <!--記事の新規投稿nav-->
                <li>
                  <a href="<%= "/posts/new" %>" class="nav-link text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-send-plus" viewBox="0 0 16 16">
                      <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855a.75.75 0 0 0-.124 1.329l4.995 3.178 1.531 2.406a.5.5 0 0 0 .844-.536L6.637 10.07l7.494-7.494-1.895 4.738a.5.5 0 1 0 .928.372l2.8-7Zm-2.54 1.183L5.93 9.363 1.591 6.602l11.833-4.733Z"/>
                      <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-3.5-2a.5.5 0 0 0-.5.5v1h-1a.5.5 0 0 0 0 1h1v1a.5.5 0 0 0 1 0v-1h1a.5.5 0 0 0 0-1h-1v-1a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                    <%= link_to("新規投稿","/posts/new") %>
                  </a>
                </li>
      
                <!--ログアウトnav-->
                <li>
                  <a href="<%= "/logout" %>" class="nav-link text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
                      <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                    </svg>
                    <%= link_to("ログアウト", "/logout") %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
    </header> 


  <!--メインの内容-->

        <main>
          <h2>記事の詳細</h2>

          <div class="contentBox">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">タイトル</label>
              <div class="form-control" id="exampleFormControltextarea1"><%= @post.title %></div>
            </div>

            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">キーワード</label>
              <div class="form-control" id="exampleFormControlTextarea2"  placeholder="遊び、スポーツ、仕事、etc"rows="3"><%= @post.keyword %></div>
            </div>    

            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">URL</label>
              <p class="form-control" id="exampleFormControlTextarea3"><%= link_to "ここをクリック", "#{@post.url}" %></p>
            </div>
               
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">内容説明</label>
              <div class="form-control" id="exampleFormControlTextarea4"><%= @post.summary %></div>
            </div>
            <% if @post.user_id == @current_user.id.to_s %>
              <div class="upload">
                <label  ><%= link_to("編集", "/posts/#{@post.id}/edit",class:"btn btn-outline-primary") %></label>
                <div ><%= button_to("削除", "/posts/#{@post.id}/destroy", data: { turbo_method: :delete },class:"btn btn-outline-primary") %>
              </div>
            <% end %>
            
</main>


<footer>
</footer>

</body>

</html>